#
# Networking configuration
#

bool 'Socket support' CONFIG_SOCKET

if [ "$CONFIG_SOCKET" = "y" ]; then
    bool '  NANO sockets'				CONFIG_NANO
    bool '  TCP/IP sockets'				CONFIG_INET
    if [ "$CONFIG_INET" = "y" ]; then
	bool '    Enable status report' 		CONFIG_INET_STATUS
    fi
    bool '  UNIX sockets'				CONFIG_UNIX

    comment '  Advanced socket options'
    bool '  Client socket support only (REQUIRED)'	CONFIG_SOCK_CLIENTONLY
    bool '  STREAM type socket support only (REQUIRED)'	CONFIG_SOCK_STREAMONLY
fi
